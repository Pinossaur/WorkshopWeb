@model Workshop.Web.Models.ViewModels.RegisterWorkerViewModel
@{
    ViewData["Title"] = "Register Worker";
}

<link rel="stylesheet" href="~/css/timepicker.css" />

<h2>Register</h2>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Username">Email</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type">Account Type</label>
                <select name="Type" class="form-control" onchange="CheckMechanic(this.value)">
                    <option value="Mechanic">Mechanic</option>
                    <option value="Worker">Worker</option>
                </select>
            </div>
            <div class="form-group" id="enter-date">
                <label asp-for="EnterTime">Enter Time</label>
                <input asp-for="EnterTime" class="form-control enter-clock" />
            </div>
            <div class="form-group" id="leave-date">
                <label asp-for="LeaveTime">Leave Time</label>
                <input asp-for="LeaveTime" class="form-control leave-clock" />
            </div>
            <div class="form-group">
                <input type="submit" value="Register New User" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <div class="text-success">
        <p>
            @ViewBag.Message
        </p>
    </div>
</div>

@section Scripts {
    <script src="~/js/timepicker.js"></script>

    <script>

        $(".enter-clock").timepicker({
          hourStep: 1,
          minStep: 15,
          minTime: "7:00",
          maxTime: "23:00"
        });

        $(".leave-clock").timepicker({
            hourStep: 1,
            minStep: 15,
        });

        function CheckMechanic(value){
            if(value == "Worker"){
                document.getElementById("enter-date").style.display = "none";
                document.getElementById("leave-date").style.display = "none";
            }
            else{
                document.getElementById("enter-date").style.display = "block";
                document.getElementById("leave-date").style.display = "block";
            }
        }

    </script>
    
);


}
