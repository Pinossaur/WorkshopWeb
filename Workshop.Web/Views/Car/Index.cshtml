@model IEnumerable<Workshop.Web.Data.Entities.Car>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-4 mb-4">
            <div class="card" style="height: 100%">
                <img class="card-img-top" src=@Url.Content(item.ImagePath) alt="Card image cap"/>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Brand @item.Model @item.Year</h5>
                    <p class="card-text">@item.LicensePlate</p>
                    <div class="btn-group btn-block">
                        <a asp-action="ViewCar" asp-route-id="@item.Id" class="btn btn-primary mt-auto mr-2 rounded">View Details</a>
                        <a asp-action="AddRepair" asp-route-id="@item.Id" class="btn btn-primary ml-2 rounded">Appoint Repair</a>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="d-flex col-4 mb-4 align-items-center justify-content-center">
        <div class="card">
            <div class="text-center">
                <a asp-action="AddCar" class="btn btn-primary">New Car</a>
            </div>
        </div>
     </div>
    
</div>


